<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.MedicFragment"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:paddingBottom="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_person_outline"
                android:layout_gravity="center"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_names"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_names_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.names"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_person_outline"
                android:layout_gravity="center"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_lastnames"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_lastnames_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.lastnames"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_id"
                android:layout_gravity="center"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_identification"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_identification_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.identification"
                    android:layout_marginTop="30dp"
                    android:inputType="number"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_email"
                android:layout_gravity="center"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_email_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.email"
                    android:layout_marginTop="30dp"
                    android:inputType="textEmailAddress"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_lock_open"
                android:layout_gravity="center"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_password"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_password_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.password"
                    android:inputType="textPassword"
                    android:layout_marginTop="30dp"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_lock_open"
                android:layout_gravity="center"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_password_repeat"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_password_repeat_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:inputType="textPassword"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.password_repeat"
                    android:layout_marginTop="30dp"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_cake"
                android:layout_gravity="center"
                />

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_age"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_age_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:inputType="number"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.age"
                    android:layout_marginTop="30dp"/>

            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"
                android:src="@drawable/ic_smartphone"
                android:layout_gravity="center"
                />
            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_register_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9">

                <EditText
                    android:id="@+id/et_register_phone_medic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#9e9e9e"
                    android:inputType="phone"
                    android:textColorHint="@color/colorPrimary"
                    android:hint="@string/register.phone"
                    android:layout_marginTop="30dp"/>

            </android.support.design.widget.TextInputLayout>
        </LinearLayout>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/rbMale_medic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5"
                android:text="@string/Male"
                />


            <RadioButton
                android:id="@+id/rbFamale_medic"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.5"
                android:text="@string/Famale" />
        </RadioGroup>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_register_medic"
            android:text="Registrar"
            android:background="@color/colorPrimaryDark"
            android:textColor="#FFF"
            android:textStyle="bold"
            />

    </LinearLayout>
</ScrollView>